.brand
  background #fff
  width 100%
  padding 30px 0
  .brandlist     //大容器
    width 100%
    height 580px
    padding-bottom 30px
    .branditem   //每一项
      /*padding-top 20px*/
      padding-bottom 15px
      margin-bottom 10px
      .brandtitle
        font-size 12px
        color #999
        text-align center

      .itemwrap
        padding 0 5px
        .wrapul
          width 100%
          overflow hidden
          .wrapli
            margin-top: 20px;
            width: 33.33%;
            padding: 0 5px;
            float left
            box-sizing border-box
            position relative
            .img
              border: 1px solid #e2e2e2;
              text-align: center;
              padding: 10px;
              box-sizing border-box
              .image
                width 76px
                height 40px
            .iconimage
              position absolute
              top 0
              left 5px
              .icon
                width 13px
                height 13px
            .logo
              font-size 8px
              padding 2px 1px
              position absolute
              top 0
              right 4px
              background #e44b46
              color #fff
            .everytitle
              margin-top 5px
              height: 20px
              text-align center
              font-size 13px
            .everyaddress
              font-size 12px
              color #999
              height 20px
              text-align center
